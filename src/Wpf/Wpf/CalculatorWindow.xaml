<Window x:Class="Wpf.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="380" Width="800">
    <StackPanel>
        <TextBlock Text="Введите число 1 : " Margin="10" Height="14" Width="701"/>
        <TextBox x:Name="Operand1TextBox" Margin="10" Height="16" Width="701"/>
        <TextBlock Text="Введите число 2 : " Margin="10" Height="14" Width="701"/>
        <TextBox x:Name="Operand2TextBox" Margin="10" Height="16" Width="701"/>
        <TextBlock Text="Введите знак действия: " Margin="10" Height="14" Width="701"/>
        <TextBox x:Name="SignTextBox" Margin="10" Height="16" Width="701"/>
        <TextBlock Text="Операции: (+, -, *, /)" Margin="10" Height="14" Width="701"/>
        <Button Content="Вычислить" Click="Calculate" Height="18" Width="719"/>
        <TextBlock x:Name="ResultTextBlock" Margin="10" Height="14" Width="701"/>
        <Button x:Name="Result_Копировать" Content="Назад" Height="37" Width="103" Click="TranslateButton_Click22"/>
    </StackPanel>
</Window>